<script>
  let max_length = 30;
  
  window.addEventListener("turbolinks:load", ()=>{
    let examples = Array.from(document.getElementsByClassName('trix-content'));
    
    for(let example of examples){
      let article_body = example.getElementsByTagName('div')[0];
      console.log(article_body.textContent)
      if (article_body.textContent.length > max_length){
        article_body.innerHTML = example.textContent.slice(0,10)+'...';
      }
    }
  })
</script>