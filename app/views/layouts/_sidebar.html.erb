<div class="container d-flex justify-content-center">
  <ul class="list-style-none">
    <li><%= link_to "inicio", root_path %></li>
    <li><%= link_to "articulos", articles_path %></li>
    <li><%= link_to "palabras", words_path %></li>
    <li><%= link_to "preguntas", questions_path %></li>
  </ul>
</div>

<% if defined? user %>
<div class="card">
  <div class="card-body d-flex flex-column">
    <div>
      <%= image_tag user.get_profile_image(40,40) %>
      <%#= user.name %>
      <%= link_to user.name, user_path(user.id)%>
    </div>
    <div class="d-flex flex-column">
      <span><i class="fa-regular fa-star"></i> <%= user.spanish_level %></span>
      <span><i class="fa-solid fa-graduation-cap"></i> <%= user.certification %></span>
      
      <span>articulos <%= user.articles.where(is_active: true).count %></span>
      <span>palabras <%= user.words.where(is_active: true).count %></span>
      <span>preguntas <%= user.questions.where(is_active: true).count %></span>
    </div>
  </div>
</div>
<% end %>