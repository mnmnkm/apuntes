<h1>Topページ</h1>

<h2><%= link_to "articulos", articles_path %></h2>
<% @articles.each do |article| %>
  <span>
    <%= link_to article.title, article_path(article.id) %>
  </span>
  <p><%= image_tag article.user.get_profile_image(100,100) %></p>
  <p><%= article.user.name %></p>
  
  <div id="favorites-btn-<%= article.id %>" class="mr-2">
    <%= render "article_favorites/favorites_btn", article: article %>
  </div>
  
  <div>
    <p>コメント件数：<%= article.article_comments.count %></p>
  </div>
  <p><%= link_to "#{article.article_comments.count} コメント", article_path(article.id) %></p>
<% end %>


<h2><%= link_to "palabras", words_path %></h2>
<% @words.each do |word| %>
  <span><%= word.spanish %></span>
  <span><%= word.japanese %></span>
  <span><%= word.spanish_example %></span>
  <span><%= word.japanese_example %></span>
　<p><%= image_tag word.user.get_profile_image(100,100) %></p>
　<p><%= word.user.name %></p>
　
　<div id="favorites-btn-<%= word.id %>" class="mr-2">
    <%= render "word_favorites/favorites_btn", word: word %>
  </div>
  
  <div>
    <p>コメント件数：<%= word.word_comments.count %></p>
  </div>
<% end %>


<h2><%= link_to "preguntas", questions_path %></h2>
<% @questions.each do |question| %>
  <span><%= question.title %></span>
  <span>
    <%= link_to question.title, question_path(question.id) %>  
  </span>
  <!--<p>未解決/解決済</p>-->
  <!--<p>回答数</p>-->
<% end %>