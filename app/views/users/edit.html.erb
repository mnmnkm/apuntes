<div class="container">
  <%= form_with model: @user do |f| %>

<div class="py-5 row">

  <div class="col-4">
    <label for="inputImage"><%= image_tag @user.get_profile_image(100,100) %></label>
    <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %> 
  </div>
  

  <div class="col-8">
    <!--<div class="mb-3">-->
      <label for="inputName">Name</label>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
    <!--</div>-->
  
    <div class="field d-flex row pt-3">
      <div class="spanish_level pr-2 col-4">Nivel</div>
      <div class="radio_button col-8">
        <div class="radio-inline">
          <%= f.radio_button :spanish_level, "Nativo", checked: "checked" %> 
          <%= f.label :spanish_level_Nativo, "Nativo 母語" %>
        </div>
        <div class="radio-inline">
          <%= f.radio_button :spanish_level, "Principiante" %>
          <%= f.label :spanish_level_Principiante, "Principiante 初心者" %>
        </div>
        <div class="radio-inline">
          <%= f.radio_button :spanish_level, "Elemental" %> 
          <%= f.label :spanish_level_Elemental, "Elemental 基礎" %>
        </div>
        <div class="radio-inline">
          <%= f.radio_button :spanish_level, "Internedio" %> 
          <%= f.label :spanish_level_Internedio, "Internedio 中級" %>
        </div>
        <div class="radio-inline">
          <%= f.radio_button :spanish_level, "Avanzado" %> 
          <%= f.label :spanish_level_Avanzado, "Avanzado 上級" %>
        </div>
        <div class="radio-inline">
          <%= f.radio_button :spanish_level, "Execelente" %> 
          <%= f.label :spanish_level_Execelente, "Execelente 堪能" %>
        </div>
      </div>
    </div>
  
    <div class="certification row pt-3">
      <div class="col-2">Claification</div>
      <%= f.text_area :certification, placeholder: "学歴・資格", class:"form-control mb-3 col-10" %>
    </div>

    <div class="introduction row pt-3">
      <div class="col-2">Presentacion</div>
      <%= f.text_area :introduction, placeholder: "自己紹介", class:"form-control mb-3 col-10" %>
    </div>
  </div>
  
  <div class="justify-content-end">
    <%= f.submit "変更を保存" %>
  </div>
</div>
<% end %>
</div>