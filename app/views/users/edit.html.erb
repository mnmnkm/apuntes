
<%= form_with model: @user do |f| %>
<div class="d-flex py-5">
  <div class="col-2">
    <label for="inputImage"><%= image_tag @user.get_profile_image(100,100) %></label>
    <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %> 
  </div>
  

  <div id="main" class="col-10">
    <!--<div class="mb-3">-->
      <label for="inputName">Name</label>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
    <!--</div>-->
  
    <div class="field d-flex">
      <span class="spanish_level pr-2">Nivel</span>
      <div class="radio_button">
        <div class="radio-inline">
          <%= f.radio_button :spanish_level, "Nativo", checked: "checked" %> 
          <%= f.label :spanish_level_Nativo, "Nativo 母語" %>
        </div>
        <div class="radio-inline">
          <%= f.radio_button :spanish_level, "Principiante" %>
          <%= f.label :spanish_level_Principiante, "Principiante 初心者" %>
        </div>
        <div class="radio-inline">
          <%= f.radio_button :spanish_level, "Elemental" %> 
          <%= f.label :spanish_level_Elemental, "Elemental 基礎" %>
        </div>
        <div class="radio-inline">
          <%= f.radio_button :spanish_level, "Internedio" %> 
          <%= f.label :spanish_level_Internedio, "Internedio 中級" %>
        </div>
        <div class="radio-inline">
          <%= f.radio_button :spanish_level, "Avanzado" %> 
          <%= f.label :spanish_level_Avanzado, "Avanzado 上級" %>
        </div>
        <div class="radio-inline">
          <%= f.radio_button :spanish_level, "Execelente" %> 
          <%= f.label :spanish_level_Execelente, "Execelente 堪能" %>
        </div>
      </div>
    </div>
  
    <div class="certification">
      Claification
      <%= f.text_area :certification, placeholder: "学歴・資格", class:"form-control mb-3 col-lg-8 offset-lg-2" %>
    </div>

    <div class="introduction">
      Presentacion
      <%= f.text_area :introduction, placeholder: "自己紹介", class:"form-control mb-3 col-lg-8 offset-lg-2" %>
    </div>
  </div>
</div>
  
  <%= f.submit "変更を保存" %>
<% end %>